                <div class="Hrm-form bg-light">

                    <div class="row justify-content-evenly pb-3">
                        <div class="col-11">
                            <h2>Add Employee</h2>
                        </div>
                    </div>

                    <form id="form" action="/HrmAddEmployee" method="post">

                        <div class="row justify-content-evenly pt-3">
                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Name</label>
                                <input type="text" name="name" class="form-control name" value=""
                                    placeholder="Enter Your Name" >
                                <p class="errorName text-danger"></p>
                            </div>
                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Nik Name</label>
                                <input type="text" name="nikName" value="" placeholder="Nik Name"
                                    class="form-control nikName" >
                                <p class="errorNikName text-danger"></p>
                            </div>

                        </div>
                        <div class="row justify-content-evenly pt-3">
                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Work</label>
                                <input type="text" name="work" class="form-control work" value=""
                                    placeholder="Enter Your Work" >
                                <p class="errorWork text-danger"></p>
                            </div>
                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Email</label>
                                <input type="email" name="email" class="form-control email" value=""
                                    placeholder="Enter Your Email">
                                <p class="errorEmail text-danger"></p>
                            </div>


                        </div>
                        <div class="row justify-content-evenly pt-3">

                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Phone</label>
                                <input type="text" name="phone" minlength="10" class="form-control phone" value=""
                                    placeholder="Enter Your Phone Number" >
                                <p class="errorPhone text-danger"></p>
                            </div>
                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Select Department</label>
                                <select name="department" id="department" class="form-control department" >
                                    <option value="">Select Department</option>
                                    <option value="Department1">Department 1</option>
                                    <option value="Department2">Department 2</option>
                                </select>
                                <p class="errorDepartment text-danger"></p>
                            </div>


                        </div>
                        <div class="row justify-content-evenly pt-3">
                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Hired Date</label>
                                <input type="date" name="date" value="" class="form-control hiredDate" >
                                <p class="errorHiredDate text-danger"></p>
                            </div>
                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Select Shift Time</label>
                                <select name="shiftTime" class="form-control shift" >
                                    <option value="">Select Shift Time</option>
                                    <option value="10am to 7pm">10am to 7pm</option>
                                    <option value="9pm to 5am">9pm to 5am</option>
                                </select>
                                <p class="errorShift text-danger"></p>
                            </div>

                        </div>

                        <div class="row justify-content-evenly pt-3">
                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Choose File</label>&nbsp;
                                <input type="file" name="file" class="file form-control" value="" >
                            </div>

                            <div class="col-md-5 col-10 pt-2">
                                <label class="form-label">Gender </label>&nbsp; <br>
                                <input type="radio" name="gender" class="gender" value="male" >&nbsp;<label
                                    class="text-dark">Male</label>
                                &nbsp; <input type="radio" name="gender" class="gender" value="female" >&nbsp;<label
                                    class="text-dark">Female</label>
                                
                            </div>

                        </div>

